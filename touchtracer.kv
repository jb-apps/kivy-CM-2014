			#BoxLayout:
			#	id:layout_dibujo
			#	canvas:
			#		Color:
			#			rgb: 1, 1, 1
					#Rectangle:
					#	source: 'data/images/background.jpg'
					#	size: self.size
	
	

<StatisticsScreen>:
	Label:
		text: 'StatisticsScreen'
	

