#:kivy 1.0.9


<LoginScreen>:
	FloatLayout:
		Label:
			font_size: root.height*0.05
			size_hint: .4,.1
			pos_hint: {'x':.3, 'y':.7}
			multiline: True
			text: 'Ingrese nombre de usuario'

		
		TextInput:
            id: txt_userLogin
			font_size: root.height*0.05
			text:''
			size_hint:.6,.1
			pos_hint: {'x':.2, 'y':.6}
			multiline: False

		Button:
	        font_size: root.height*0.05
	        pos_hint: {'x':.3, 'y':.48}
	        size_hint: .4,.1
	        text: "Aceptar"
            on_press: root.user_login()

<UserListScreen>:
	
	GridLayout:
		rows: 2
		spacing: 5
		BoxLayout:
			size_hint_y: None
            padding: '2sp'
            canvas:
                Color:
                    rgba: 1, 1, 1, .3
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, None
            height: '55sp'
            
            Button:
            	id: back_button
                size_hint: None, 1
                size_hint_x:None
                width:root.width*0.25
                text: 'Atr√°s'
                on_press: root.back()
            
            Label:
                text: "Usuarios"
            Button:
            	id: play_button
                size_hint: None, 1
                width: root.width*0.25
                text: 'Play'
                on_press: root.play()
		
		BoxLayout:
			id:lst_user
			orientation: 'vertical'
			canvas:
				Color:
					rgba: 1,1,1,.6
				Rectangle:
					size: self.size
					pos: self.pos

<PlayViewerScreen>:
	GridLayout:
		rows: 2
		spacing: 5

		BoxLayout:
			orientation: 'horizontal'
            padding: '2sp'
            spacing: '5sp'
            canvas:
                Color:
                    rgba: 1, 1, 1, .3
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, None
            height: '55sp'

            Button:
            	id: go_out_button
                size_hint: None, 1
                width: root.width*0.20
                text: 'Salir'
                on_press: root.salir()
				
			Label:
				size_hint: None, 1
				width: root.width*0.6
				text_size: self.width, None
				text: 'Visor'
				haling: 'justify'
				color: (1, 1, 1, .8)

			BoxLayout:
				canvas:
					Color:
						rgba: 1, 1, 1,0.8
					Ellipse:
		                size: self.height,self.height
						pos: self.pos
					
					Color:
						rgba: 0, 0, 1, 0.7
					Ellipse:
		                size: self.height,self.height
		                pos: self.pos
						angle_start: 0
						angle_end: root.uxSeconds * 6

					Color:
						rgba: 0, 0, 0, 0.9
					Ellipse:
		                size: self.height*.6,self.height*.6
						pos:self.x*1.05,self.y*1.025


		BoxLayout:
			Label:
				text: 'PlayViewerScreen'
