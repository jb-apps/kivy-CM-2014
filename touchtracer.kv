#:kivy 1.0.9


<LoginScreen>:
	GridLayout:
		rows:2
		BoxLayout:
			size_hint_y: None
            canvas:
                Color:
                    rgba: .5, .7, .7, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, None
            height: '55sp'
	        Label:
	        	text:'ETSII'
				size_hint: None, 1
				size_hint_x:None
				width:root.width*0.25
	
		FloatLayout:
			canvas:
	            Color:
	                rgba: .5, .7, .7, 1
	            Rectangle:
	                size:self.size
			Label:
				font_size: root.height*0.05
				size_hint: .4,.1
				pos_hint: {'x':.3, 'y':.7}
				multiline: True
				text: 'Nombre de usuario'
				
			TextInput:
	            id: txt_userLogin
				font_size: root.height*0.05
				text:''
				size_hint:.6,.1
				pos_hint: {'x':.2, 'y':.6}
				#background_color:.5, .7, .7, 1
				background_disabled_active: 'True'
				multiline: False

			Button:
		        font_size: root.height*0.05
		        pos_hint: {'x':.3, 'y':.48}
		        size_hint: .4,.1
		        text: "Aceptar"
		        background_color: .4, .6, .6, .4
	            on_press: root.user_login()

<UserListScreen>:
	GridLayout:
		rows: 2
		spacing: '1sp'
		BoxLayout:
			size_hint_y: None
            padding: '2sp'
            canvas:
                Color:
                    rgba: .5, .7, .7, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, None
            height: '55sp'
            
            Button:
            	id: back_button
                size_hint: None, 1
                size_hint_x:None
                width:root.width*0.25
                text: 'Atr√°s'
                background_color: .4, .6, .6, .4
                on_press: root.back()
            
            Label:
                text: "Usuarios"
            Button:
            	id: play_button
                size_hint: None, 1
                width: root.width*0.25
                text: 'Play'
                background_color: .4, .6, .6, .4
                on_press: root.play()
		
		BoxLayout:
			id:lst_user
			orientation: 'vertical'
			canvas:
				Color:
					rgba: .5, .7, .7, 1
				Rectangle:
					size: self.size
					pos: self.pos

<PlayViewerScreen>:
	GridLayout:
		rows: 3
		spacing: 5

		BoxLayout:
			id: layout_barra_titulo
			orientation: 'horizontal'
            padding: '2sp'
            spacing: '5sp'
            
            canvas:
                Color:
                    rgba: .5, .7, .7, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            size_hint: 1, None
            height: '55sp'

            Button:
            	id: go_out_button
                size_hint: None, 1
                width: root.width*0.20
                text: 'Salir'
                background_color: .4, .6, .6, .4
                on_press: root.salir_viewer()

			BoxLayout:
				id: layout_textInput
				size_hint: 1, None
	            height: '55sp'
				TextInput:
					id: txt_word
					font_size: root.height*0.05
					text:''
					#size_hint:.6,.1
					#pos_hint: {'x':.2, 'y':.6}
					multiline: False
			Button:
            	id: comprobar_button
                size_hint: None, 1
                width: root.width*0.30
                text: 'Comprobar'
                background_color: .4, .6, .6, .4
                on_press: root.comprobar_palabra()
		# Temporizador
		BoxLayout:
			size_hint: 1, None
            height: '55sp'
			canvas:
				Color:
					rgba: 1, 1, 1,0.8
				Ellipse:
	                size: self.height,self.height
					pos: self.pos
				
				Color:
					rgba: 0, 0, 1, 0.7
				Ellipse:
	                size: self.height,self.height
	                pos: self.pos
					angle_start: 0
					angle_end: root.uxSeconds * 12

#				Color:
#					rgba: 0, 0, 0, 0.9
#				Ellipse:
#	                size: self.height*.6,self.height*.6
#					pos:self.x*1.05,self.y*1.025

		BoxLayout:
			Label:
				id: lab_resultado
				text: ''
			Widget:
			BoxLayout:
				id:layout_visualizador
				canvas:
					Color:
						rgb: 1, 1, 1
					#Rectangle:
					#	source: 'data/images/background.jpg'
					#	size: self.size

<PlayDrawerScreen>:
	GridLayout:
		id: gridLayout
		rows: 2
		spacing: 5
		canvas:
			Color:
				rgba: .9, .9, .9,1
			Rectangle:
                size: self.size
				#pos: self.pos

		BoxLayout:
			id: layout_barra_titulo
			orientation: 'horizontal'
            padding: '2sp'
            spacing: '5sp'
            
            canvas:
                Color:
                    rgba: .5, .7, .7, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            size_hint: 1, None
            height: '55sp'

            Button:
            	id: go_out_button
                size_hint: None, 1
                width: root.width*0.20
                text: 'Salir'
                background_color: .4, .6, .6, .4
                on_press: root.salir()
            
            BoxLayout:
				id: layout_textInput
				size_hint: 1, None
	            height: '55sp'
				Label:
					text: 'Pantalla de dibujo'
		                
		    Button:
            	id: clear_button
                size_hint: None, 1
                width: root.width*0.20
                text: 'Borrar'
                background_color: .4, .6, .6, .4
                on_press: root.borrarPantalla()

		BoxLayout:
			orientation: 'vertical'
			# Temporizador
			BoxLayout:
				size_hint: 1, None
	            height: '55sp'
	            width: '55sp'
				canvas:
					Color:
						rgba: .8, .8, .8,1
					Ellipse:
		                size: self.height,self.height
						pos: self.pos
					
					Color:
						rgba: .3, .56, .9, 1
					Ellipse:
		                size: self.height,self.height
		                pos: self.pos
						angle_start: 0
						angle_end: root.uxSeconds * 12

					#Color:
					#	rgba: 1, 1, 1, 1
					#Ellipse:
		            #    size: self.height*.85,self.height*.85
					#	pos:self.width/2, self.height/2
			BoxLayout:
				id:layout_dibujo
				canvas:
					Color:
						rgba: .3, .3, .3, 1
					#Rectangle:
					#	source: 'data/images/background.jpg'
					#	size: self.size