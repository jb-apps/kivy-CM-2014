#:kivy 1.0.9

<LoginScreen>:
	f_username: username
	label: my_label

	Label:
		id:my_label
		font_size: root.height*0.05
        center_x: root.width/2
        center_y: root.height/2 + root.height*0.2
        top: root.top - 50
		text: 'Username:'

	TextInput:
		id: username
		font_size: root.height*0.05
        center_x: root.width/2 - root.width*0.25
        center_y: root.height/2 + root.height*0.1
        size: root.width*0.6,root.height*0.075
        top: root.top - 50		
		text:''

	Button:
        font_size: root.height*0.05
        size: root.width*0.4,root.height*0.1
        center_x: root.width / 2
        center_y: root.height / 2
        top: root.top - 50
        text: "Aceptar"
        on_release: root.btn_click()
	